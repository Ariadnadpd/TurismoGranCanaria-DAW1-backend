<h1>Listado de sitios de Parques temáticos</h1>

<table>
  <thead>
    <tr>
      <th>Título</th>
      <th>Subtítulo</th>
      <th>Localización</th>
      <th>Teléfono</th>
      <th>Sitio web</th>
      <th colspan="3">Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @act_ptematicos.each do |act_ptematico| %>
      <tr>
        <td><%= act_ptematico.titulo %></td>
        <td><%= act_ptematico.subtitulo %></td>
        <td><%= act_ptematico.localizacion %></td>
        <td><%= act_ptematico.telefono %></td>
        <td><%= act_ptematico.sitioweb %></td>
        <td><%= link_to 'Mostrar', act_ptematico %></td>
        <td><%= link_to 'Editar', edit_act_ptematico_path(act_ptematico) %></td>
        <td><%= link_to 'Eliminar', act_ptematico, method: :delete, data: { confirm: '¿Está seguro de eliminar esta entrada?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva entrada', new_act_ptematico_path %>

<p id="notice"><%= notice %></p>
