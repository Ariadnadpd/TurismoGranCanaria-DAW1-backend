
<h1>Listado de sitios de Alfareria</h1>

<table>
  <thead>
    <tr>
      <th>Título</th>
      <th>Subtítulo</th>
      <th>Localización</th>
      <th>Teléfono</th>
      <th>Email</th>
      <th>Información</th>
      <th>Página de Facebook</th>
      <th colspan="3">Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @art_alfareris.each do |art_alfareri| %>
      <tr>
        <td><%= art_alfareri.titulo %></td>
        <td><%= art_alfareri.subtitulo %></td>
        <td><%= art_alfareri.localizacion %></td>
        <td><%= art_alfareri.telefono %></td>
        <td><%= art_alfareri.email %></td>
        <td><%= art_alfareri.informacion %></td>
        <td><%= art_alfareri.rss_facebook %></td>
        <td><%= link_to 'Mostrar', art_alfareri %></td>
        <td><%= link_to 'Editar', edit_art_alfareri_path(art_alfareri) %></td>
        <td><%= link_to 'Eliminar', art_alfareri, method: :delete, data: { confirm: '¿Está seguro de eliminar esta entrada?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva entrada', new_art_alfareri_path %>
<p id="notice"><%= notice %></p>