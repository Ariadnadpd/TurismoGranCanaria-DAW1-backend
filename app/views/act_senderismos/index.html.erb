<div class="contenedor">
  <h1>Listado de lugares de Senderismos</h1>

  <table>
    <thead>
      <tr>
        <th>Título</th>
        <th>Subtítulo</th>
        <th>Ruta</th>
        <th colspan="3">Acciones</th>
      </tr>
    </thead>

    <tbody>
      <% @act_senderismos.each do |act_senderismo| %>
        <tr>
          <td><%= act_senderismo.titulo %></td>
          <td><%= act_senderismo.subtitulo %></td>
          <td><%= act_senderismo.ruta %></td>
          <td><%= link_to 'Mostrar', act_senderismo %></td>
          <td><%= link_to 'Editar', edit_act_senderismo_path(act_senderismo) %></td>
          <td><%= link_to 'Eliminar', act_senderismo, method: :delete, data: { confirm: '¿Está seguro de eliminar esta entrada?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <div class="enlace">
    <%= link_to 'Nueva entrada', new_act_senderismo_path %>
    <%= link_to 'Atrás', root_path %>
  </div>

  <p id="notice"><%= notice %></p>
</div>