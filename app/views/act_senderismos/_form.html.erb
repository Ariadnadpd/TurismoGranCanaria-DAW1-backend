<%= form_with(model: act_senderismo) do |form| %>
  <% if act_senderismo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(act_senderismo.errors.count, "error") %> prohibió que se guarde esta entrada:</h2>

      <ul>
        <% act_senderismo.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label "Título" %>
    <%= form.text_field :titulo %>
  </div>

  <div class="field">
    <%= form.label "Subtítulo" %>
    <%= form.text_field :subtitulo %>
  </div>

  <div class="field">
    <%= form.label "Ruta" %>
    <%= form.text_field :ruta, placeholder: 'https://es.wikiloc.com/ruta' %>
  </div>

  <div class="actions">
    <%= form.submit "Guardar" %>
  </div>
<% end %>
