<div class="contenedor">
  <h1>Listado de Preguntas frecuentes</h1>

  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Pregunta</th>
        <th>Respuesta</th>
        <th colspan="3">Acciones</th>
      </tr>
    </thead>

    <tbody>
      <% @preguntasfrecuentes.each do |preguntasfrecuente| %>
        <tr>
          <td><%= preguntasfrecuente.id%></td>
          <td><%= preguntasfrecuente.pregunta %></td>
          <td><%= preguntasfrecuente.respuesta %></td>
          <td><%= link_to 'Mostrar', preguntasfrecuente %></td>
          <td><%= link_to 'Editar', edit_preguntasfrecuente_path(preguntasfrecuente) %></td>
          <td><%= link_to 'Eliminar', preguntasfrecuente, method: :delete, data: { confirm: '¿Está seguro de eliminar esta entrada?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <div class="enlace">
    <%= link_to 'Nueva entrada', new_preguntasfrecuente_path %>
    <%= link_to 'Atrás', root_path %>
  </div>
  <p id="notice"><%= notice %></p>
</div>