<h1>Listado de Museos</h1>

<table>
  <thead>
    <tr>
      <th>Título</th>
      <th>Subtítulo</th>
      <th>Localización</th>
      <th>Teléfono</th>
      <th>Sitio web</th>
      <th colspan="3">Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @adnd_museos.each do |adnd_museo| %>
      <tr>
        <td><%= adnd_museo.titulo %></td>
        <td><%= adnd_museo.subtitulo %></td>
        <td><%= adnd_museo.localizacion %></td>
        <td><%= adnd_museo.telefono %></td>
        <td><%= adnd_museo.sitioweb %></td>
        <td><%= link_to 'Mostrar', adnd_museo %></td>
        <td><%= link_to 'Editar', edit_adnd_museo_path(adnd_museo) %></td>
        <td><%= link_to 'Eliminar', adnd_museo, method: :delete, data: { confirm: '¿Está seguro de eliminar esta entrada?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva entrada', new_adnd_museo_path %>
<%= link_to 'Atrás', :back %>
<p id="notice"><%= notice %></p>
