
<h1>Listado de sitios de Cantería</h1>

<table>
  <thead>
    <tr>
      <th>Título</th>
      <th>Subtítulo</th>
      <th>Localización</th>
      <th>Teléfono</th>
      <th>Información</th>
      <th>Página de Facebook</th>
      <th colspan="3">Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @art_canteris.each do |art_canteri| %>
      <tr>
        <td><%= art_canteri.titulo %></td>
        <td><%= art_canteri.subtitulo %></td>
        <td><%= art_canteri.localizacion %></td>
        <td><%= art_canteri.telefono %></td>
        <td><%= art_canteri.informacion %></td>
        <td><%= art_canteri.rss_facebook %></td>
        <td><%= link_to 'Mostrar', art_canteri %></td>
        <td><%= link_to 'Editar', edit_art_canteri_path(art_canteri) %></td>
        <td><%= link_to 'Eliminar', art_canteri, method: :delete, data: { confirm: '¿Está seguro de eliminar esta entrada?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva entrada', new_art_canteri_path %>

<p id="notice"><%= notice %></p>
