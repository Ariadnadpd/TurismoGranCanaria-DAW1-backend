<%= form_with(model: adnd_playa) do |form| %>
  <% if adnd_playa.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(adnd_playa.errors.count, "error") %> prohibió que se guarde esta entrada:</h2>

      <ul>
        <% adnd_playa.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label "Título" %>
    <%= form.text_field :titulo %>
  </div>

  <div class="field">
    <%= form.label "Subtítulo" %>
    <%= form.text_field :subtitulo %>
  </div>

  <div class="field">
    <%= form.label "Localización" %>
    <%= form.text_field :localizacion %>
  </div>

  <div class="actions">
    <%= form.submit "Guardar" %>
  </div>
<% end %>
