<div class="contenedor">
  <h1>Listado de Trajes Tradicionales</h1>

  <table>
    <thead>
      <tr>
        <th>Título</th>
        <th>Subtítulo</th>
        <th>Localización</th>
        <th>Teléfono</th>
        <th>Información</th>
        <th>Página de Facebook</th>
        <th>Página de Instagram</th>
        <th colspan="3">Acciones</th>
      </tr>
    </thead>

    <tbody>
      <% @art_ttradicionales.each do |art_ttradicionale| %>
        <tr>
          <td><%= art_ttradicionale.titulo %></td>
          <td><%= art_ttradicionale.subtitulo %></td>
          <td><%= art_ttradicionale.localizacion %></td>
          <td><%= art_ttradicionale.telefono %></td>
          <td><%= art_ttradicionale.informacion %></td>
          <td><%= art_ttradicionale.rss_facebook %></td>
          <td><%= art_ttradicionale.rss_instagram %></td>
          <td><%= link_to 'Mostrar', art_ttradicionale %></td>
          <td><%= link_to 'Editar', edit_art_ttradicionale_path(art_ttradicionale) %></td>
          <td><%= link_to 'Eliminar', art_ttradicionale, method: :delete, data: { confirm: '¿Está seguro de eliminar esta entrada?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <div class="enlace">
    <%= link_to 'Nueva entrada', new_art_ttradicionale_path %>
    <%= link_to 'Atrás', root_path %>
  </div>

  <p id="notice"><%= notice %></p>
</div>